    call CampaignAttackerEx( 1, 2, 3, BLOOD_ELF_PRIEST )
    call CampaignAttackerEx( 1, 2, 3, SORCERESS )
    call CampaignAttackerEx( 2, 2, 3, BLOOD_ELF_DRAGON_HAWK )
    call CampaignAttackerEx( 2, 2, 3, PANDAREN_WARLORD )
    call AddStandardUnitsToAttackWave()
    call Sleep( M2 ) // Waits 2 minutes before attacking
    call LaunchAttack()

    loop //Init the infinite attack loop
        //*** WAVE 12 ***
        call InitAssaultGroup()
        
        // small ground army
        call CampaignAttackerEx( 4, 4, 4, PANDAREN_HONORGUARD )
        call CampaignAttackerEx( 4, 4, 4, PANDAREN_ARCHER )
        call CampaignAttackerEx( 4, 4, 4, PANDAREN_ARCHER )
        call CampaignAttackerEx( 4, 4, 4, PANDAREN_SAGE )
        call CampaignAttackerEx( 4, 4, 4, BLOOD_ELF_PRIEST )
        call CampaignAttackerEx( 4, 4, 4, SORCERESS )
