endfunction

function main takes nothing returns nothing
    call CampaignAI( NAGA_CORAL, function ChooseHeroSkill )
    call ConfigureAI( )
    call InitHeroTheAlliance( )
	call StartThread(function UpdateWorkers)

    call BuildingStrategy( )

    call AttackWaves( )
endfunction
