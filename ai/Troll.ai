         // big air army
        call CampaignAttackerEx( 8, 10, 12, WYVERN )
        call CampaignAttackerEx( 8, 10, 12, BATRIDER )
        call CampaignAttackerEx( 6, 8, 10, ORC_DRAGON)
        
        call AddStandardUnitsToAttackWave()
        call Sleep( M2 ) // Waits 2 minutes before attacking
        call LaunchAttack()
    endloop
endfunction

function main takes nothing returns nothing
    call CampaignAI( TROLL_HUT, function ChooseHeroSkill )
    call ConfigureAI( )
    call InitHero( )
    call StartThread(function UpdateWorkers)
    call Expansions(function BuildExpansions)

    call BuildingStrategy( )

    call AttackWaves( )
endfunction
