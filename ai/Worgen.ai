        call CampaignAttackerEx( 4, 4, 4, BLOOD_ELF_BALLISTA )
        call CampaignAttackerEx( 4, 4, 4, BLOOD_ELF_CAGE )
        
        // big air army
        call CampaignAttackerEx( 8, 12, 18, BLOOD_ELF_DRAGON_HAWK )
        call CampaignAttackerEx( 8, 12, 18, BLOOD_ELF_PHOENIX )

        call AddStandardUnitsToAttackWave()
        call Sleep( M2 ) // Waits 2 minutes before attacking
        call LaunchAttack()
    endloop
endfunction

function main takes nothing returns nothing
    call CampaignAI( WORGEN_HOUSE, function ChooseHeroSkill )
    call ConfigureAI( )
    call InitHero( )
    call StartThread(function UpdateWorkers)
    call Expansions(function BuildExpansions)

    call BuildingStrategy( )

    call AttackWaves( )
endfunction
