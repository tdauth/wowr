    // ******

    Frame "FRAME" "LoginPanel" {

        Frame "TEXT" "NameLabel" INHERITS "BattleNetTitleTextTemplate" {
            SetPoint TOPLEFT, "BattleNetMainFrame", TOPLEFT, 0.03125, -0.1,
            Text "COLON_ACCOUNT_NAME",
