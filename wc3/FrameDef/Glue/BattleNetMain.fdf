        Frame "BACKDROP" "NewAccountBackdrop" INHERITS "BattleNetMenuButtonBaseBackdrop" {
            Width 0.256,
            SetPoint BOTTOMLEFT, "ChangePasswordBackdrop", TOPLEFT, 0.0, -0.01,
