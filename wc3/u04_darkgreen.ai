//============================================================================
//  Undead 04 -- dark green player -- AI Script
//============================================================================
globals
    player user = Player(3)
endglobals

//============================================================================
//  main
//============================================================================
function main takes nothing returns nothing
    call CampaignAI(ELF_FARM,null)
	
	call SetReplacements(1,1,3)
	set do_campaign_farms = false

    call SetBuildUnitEx( 0,0,1, TOWN_HALL         )
    call SetBuildUnitEx( 2,2,2, PEASANT           )
    call SetBuildUnitEx( 0,0,1, ELF_HIGH_BARRACKS )
	call SetBuildUnitEx( 2,2,2, ZEPPLIN           )
    call SetBuildUnitEx( 0,0,1, LUMBER_MILL       )
    call SetBuildUnitEx( 5,5,5, PEASANT           )
	call SetBuildUnitEx( 0,0,1, KEEP	          )
    call SetBuildUnitEx( 0,0,1, SANCTUM           )

    call CampaignDefenderEx( 0,0,1, HIGH_SWORDMAN	)
    call CampaignDefenderEx( 1,1,2, HIGH_ARCHER		)
	call CampaignDefenderEx( 0,0,1, PRIEST			)
	call CampaignDefenderEx( 1,1,1, DRAGON_HAWK		)

    call WaitForSignal()

    //*** WAVE 1 ***
    call InitAssaultGroup()
    call CampaignAttackerEx( 2,2,3, DRAGON_HAWK		)
	call SuicideOnPlayerEx(M8,M8,M8,user)

    //*** WAVE 2 ***
    call InitAssaultGroup()
    call CampaignAttackerEx( 3,3,4, DRAGON_HAWK		)
    call SuicideOnPlayerEx(M7,M7,M5,user)

    //*** WAVE 3 ***
    call InitAssaultGroup()
    call CampaignAttackerEx( 1,1,4, DRAGON_HAWK		)
    call CampaignAttackerEx( 2,2,4, HIGH_ARCHER		)
    call SuicideOnPlayerEx(M8,M8,M5,user)

    //*** WAVE 4 ***
    call InitAssaultGroup()
	call CampaignAttackerEx( 4,4,6, DRAGON_HAWK		)
    call SuicideOnPlayerEx(M8,M8,M6,user)

    //*** WAVE 5 ***
    call InitAssaultGroup()
    call CampaignAttackerEx( 0,0,4, HIGH_SWORDMAN	)
    call CampaignAttackerEx( 3,3,4, HIGH_ARCHER		)
    call CampaignAttackerEx( 3,3,3, DRAGON_HAWK		)
    call SuicideOnPlayerEx(M8,M8,M5,user)

    loop
        //*** WAVE 6+ ***
        call InitAssaultGroup()
		call CampaignAttackerEx( 5,5,9, DRAGON_HAWK		)
        call SuicideOnPlayerEx(M8,M8,M6,user)

		//*** WAVE 7+ ***
		call InitAssaultGroup()
		call CampaignAttackerEx( 1,1,3, HIGH_SWORDMAN	)
		call CampaignAttackerEx( 2,2,2, HIGH_ARCHER		)
		call CampaignAttackerEx( 2,2,6, DRAGON_HAWK		)
		call CampaignAttackerEx( 0,0,2, BALLISTA		)
		call SuicideOnPlayerEx(M8,M8,M5,user)

		//*** WAVE 8+ ***
		call InitAssaultGroup()
		call CampaignAttackerEx( 3,3,6, DRAGON_HAWK		)
		call CampaignAttackerEx( 3,3,3, HIGH_ARCHER )
		call CampaignAttackerEx( 1,1,2, PRIEST      )
		call SuicideOnPlayerEx(M8,M8,M6,user)
    endloop
endfunction
