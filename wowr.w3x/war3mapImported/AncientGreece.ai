function BuildExpansions takes nothing returns nothing
    call SetBuildExpa(expansions, ROMANEMPIRE_TIER_1)
    call SetBuildExpa(expansions, ROMANEMPIRE_VILLA)
    call SetBuildExpa(expansions, ROMANEMPIRE_GUARD_TOWER)
endfunction

function AttackWaves takes nothing returns nothing
    //*** WAVE 1 ***
    call InitAssaultGroup()
    call CampaignAttackerEx( 2, 3, 3, ROMANEMPIRE_CENTURION )
    call CampaignAttackerEx( 0, 1, 2, ROMANEMPIRE_ARCHER )
    call AddStandardUnitsToAttackWave()
    call Sleep( M3 ) // Waits 3 minutes before attacking
    call LaunchAttack()

    //*** WAVE 2 ***
    call InitAssaultGroup()
    call CampaignAttackerEx( 2, 3, 3, ROMANEMPIRE_CENTURION )
    call CampaignAttackerEx( 0, 1, 2, ROMANEMPIRE_ARCHER )
    call AddStandardUnitsToAttackWave()
    call Sleep( M2 ) // Waits 2 minutes before attacking
    call LaunchAttack()

    //*** WAVE 3 ***
    call InitAssaultGroup()
    call CampaignAttackerEx( 3, 4, 4, ROMANEMPIRE_CENTURION )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_ARCHER )
    call AddStandardUnitsToAttackWave()
    call Sleep( M1 ) // Waits 1 minute before attacking
    call LaunchAttack()

    //*** WAVE 4 ***
    call InitAssaultGroup()
    call CampaignAttackerEx( 3, 4, 4, ROMANEMPIRE_CENTURION )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_ARCHER )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_EQUES )
    call AddStandardUnitsToAttackWave()
    call Sleep( M2 ) // Waits 2 minutes before attacking
    call LaunchAttack()

    //*** WAVE 5 ***
    call InitAssaultGroup()
    call CampaignAttackerEx( 3, 4, 4, ROMANEMPIRE_CENTURION )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_ARCHER )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_EQUES )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_PRIEST )
    call AddStandardUnitsToAttackWave()
    call Sleep( M2 ) // Waits 2 minutes before attacking
    call LaunchAttack()

    //*** WAVE 6 ***
    call InitAssaultGroup()
    call CampaignAttackerEx( 3, 4, 4, ROMANEMPIRE_CENTURION )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_ARCHER )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_EQUES )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_PRIEST )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_SENATOR )
    call AddStandardUnitsToAttackWave()
    call Sleep( M2 ) // Waits 2 minutes before attacking
    call LaunchAttack()

    //*** WAVE 7 ***
    call InitAssaultGroup()
    call CampaignAttackerEx( 3, 4, 4, ROMANEMPIRE_CENTURION )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_ARCHER )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_EQUES )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_PRIEST )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_SENATOR )
    call CampaignAttackerEx( 2, 2, 3, ROMANEMPIRE_GLADIATOR )
    call AddStandardUnitsToAttackWave()
    call Sleep( M2 ) // Waits 2 minutes before attacking
    call LaunchAttack()

    //*** WAVE 8 ***
    call InitAssaultGroup()
    call CampaignAttackerEx( 3, 4, 4, ROMANEMPIRE_CENTURION )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_ARCHER )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_ARCHER )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_EQUES )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_PRIEST )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_SENATOR )
    call CampaignAttackerEx( 2, 2, 3, ROMANEMPIRE_GLADIATOR )
    call AddStandardUnitsToAttackWave()
    call Sleep( M2 ) // Waits 2 minutes before attacking
    call LaunchAttack()

    //*** WAVE 9 ***
    call InitAssaultGroup()
    call CampaignAttackerEx( 3, 4, 4, ROMANEMPIRE_CENTURION )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_ARCHER )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_ARCHER )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_EQUES )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_PRIEST )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_SENATOR )
    call CampaignAttackerEx( 2, 2, 3, ROMANEMPIRE_GLADIATOR )
    call AddStandardUnitsToAttackWave()
    call Sleep( M2 ) // Waits 2 minutes before attacking
    call LaunchAttack()

    //*** WAVE 10 ***
    call InitAssaultGroup()
    call CampaignAttackerEx( 3, 4, 4, ROMANEMPIRE_CENTURION )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_ARCHER )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_ARCHER )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_EQUES )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_PRIEST )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_SENATOR )
    call CampaignAttackerEx( 2, 2, 3, ROMANEMPIRE_GLADIATOR )
    call CampaignAttackerEx( 2, 2, 3, ROMANEMPIRE_CHARIOT )
    call AddStandardUnitsToAttackWave()
    call Sleep( M2 ) // Waits 2 minutes before attacking
    call LaunchAttack()

    //*** WAVE 11 ***
    call InitAssaultGroup()
    call CampaignAttackerEx( 3, 4, 4, ROMANEMPIRE_CENTURION )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_ARCHER )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_ARCHER )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_EQUES )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_PRIEST )
    call CampaignAttackerEx( 1, 2, 3, ROMANEMPIRE_SENATOR )
    call CampaignAttackerEx( 2, 2, 3, ROMANEMPIRE_GLADIATOR )
    call CampaignAttackerEx( 2, 2, 3, ROMANEMPIRE_CHARIOT )
    call AddStandardUnitsToAttackWave()
    call Sleep( M2 ) // Waits 2 minutes before attacking
    call LaunchAttack()

    loop //Init the infinite attack loop
        //*** WAVE 12 ***
        call InitAssaultGroup()
        
        // small ground army
        call CampaignAttackerEx( 4, 4, 4, ROMANEMPIRE_CENTURION )
        call CampaignAttackerEx( 4, 4, 4, ROMANEMPIRE_ARCHER )
        call CampaignAttackerEx( 4, 4, 4, ROMANEMPIRE_ARCHER )
        call CampaignAttackerEx( 4, 4, 4, ROMANEMPIRE_EQUES )
        call CampaignAttackerEx( 4, 4, 4, ROMANEMPIRE_PRIEST )
        call CampaignAttackerEx( 4, 4, 4, ROMANEMPIRE_SENATOR )
        call CampaignAttackerEx( 2, 2, 3, ROMANEMPIRE_LION_MALE )
        call CampaignAttackerEx( 4, 4, 4, ROMANEMPIRE_CHARIOT )
        call CampaignAttackerEx( 4, 4, 4, ROMANEMPIRE_BALLISTA )
        call CampaignAttackerEx( 4, 4, 4, ROMANEMPIRE_CATAPULT )
        
        // big air army

        call AddStandardUnitsToAttackWave()
        call AddDragonsToAttackWave()
        call Sleep( M2 ) // Waits 2 minutes before attacking
        call LaunchAttack()
    endloop
endfunction

function main takes nothing returns nothing
    call CampaignAI( ROMANEMPIRE_TENT, function ChooseHeroSkill )
    call ConfigureAI( )
    call InitHero( )
    call StartThread(function UpdateWorkers)
    call Expansions(function BuildExpansions)

    call BuildingStrategy( )

    call AttackWaves( )
endfunction
