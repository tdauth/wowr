function BuildingStrategy takes nothing returns nothing
    // **********************************
    // *      Building Strategy         *
    // **********************************
    // Tier 1 Buildings
    call SetReplacements( 1, 2, 3 )
    call SetBuildUnit( 1, ANCIENTGREECE_TIER_1 )
    call SetBuildUnit( 17, ANCIENTGREECE_WORKER )
    call SetBuildUnit( 2, ANCIENTGREECE_CITIZEN_MALE )

    call BuildingStrategyStandardTier1()

    call SetBuildUnit( 2, ANCIENTGREECE_HOUSING )
    call SetBuildUnit( 3, ANCIENTGREECE_HOUSE )
    call SetBuildUnit( 2, ANCIENTGREECE_BARRACKS )
    call SetBuildUnit( 1, ANCIENTGREECE_ALTAR )
    call SetBuildUnit( 1, ANCIENTGREECE_BLACKSMITH )
    call SetBuildUnit( 1, ANCIENTGREECE_STOCKPILE )
    call SetBuildUnit( 1, ANCIENTGREECE_SHOP )
    
    call SetBuildUpgr( 1, UPG_ANCIENTGREECE_DEFEND )
    call SetBuildUpgr( 1, UPG_ANCIENTGREECE_URBAN_PLANNING )
    call SetBuildUpgr( 1, UPG_ANCIENTGREECE_MELEE )
    call SetBuildUpgr( 1, UPG_ANCIENTGREECE_ARMOR )
    call SetBuildUpgr( 1, UPG_ANCIENTGREECE_RANGED )

    // Tier 2 buildings
    call SetBuildUnit( 1, ANCIENTGREECE_BLACKSMITH )
    call SetBuildUnit( 1, ANCIENTGREECE_STOCKPILE )
    call SetBuildUnit( 1, ANCIENTGREECE_TEMPLE )
    call SetBuildUnit( 4, ANCIENTGREECE_HOUSE )
    call SetBuildUnit( 2, ANCIENTGREECE_WATCH_TOWER )
    call SetBuildUnit( 2, ANCIENTGREECE_CITIZEN_FEMALE )

    call SetBuildUpgr( 2, UPG_ANCIENTGREECE_URBAN_PLANNING )
    call SetBuildUpgr( 2, UPG_ANCIENTGREECE_MELEE )
    call SetBuildUpgr( 2, UPG_ANCIENTGREECE_ARMOR )
    call SetBuildUpgr( 2, UPG_ANCIENTGREECE_RANGED )
    call SetBuildUpgr( 1, UPG_ANCIENTGREECE_PHYSICIAN )
    call SetBuildUpgr( 1, UPG_ANCIENTGREECE_PRIEST )
    
    // Tier 3 buildings
    call SetBuildUnit( 5, ANCIENTGREECE_HOUSE )
    call SetBuildUnit( 1, ANCIENTGREECE_WATCH_TOWER )
    call SetBuildUnit( 1, ANCIENTGREECE_STABLES )
    call SetBuildUnit( 1, ANCIENTGREECE_ARCHERY_RANGE )

    call SetBuildUpgr( 1, UPG_ROMANEMPIRE_AQUEDUCT )
    call SetBuildUpgr( 1, UPG_ROMANEMPIRE_PILUM )
    call SetBuildUpgr( 1, UPG_ANCIENTGREECE_BACKPACK )
    call SetBuildUpgr( 3, UPG_ANCIENTGREECE_URBAN_PLANNING )
    call SetBuildUpgr( 3, UPG_ANCIENTGREECE_MELEE )
    call SetBuildUpgr( 3, UPG_ANCIENTGREECE_ARMOR )
    call SetBuildUpgr( 3, UPG_ANCIENTGREECE_RANGED )
    call SetBuildUpgr( 2, UPG_ANCIENTGREECE_PHYSICIAN )
    call SetBuildUpgr( 2, UPG_ANCIENTGREECE_PRIEST )

    call SetBuildUpgr( 1, UPG_ANCIENTGREECE_ASTROLOGY )
    call SetBuildUpgr( 1, UPG_ANCIENTGREECE_IMPROVED_WATER_MILL )
    call SetBuildUpgr( 1, UPG_ANCIENTGREECE_CITY_STATES )
    call SetBuildUpgr( 1, UPG_ANCIENTGREECE_DEMOCRACY )
    call SetBuildUpgr( 1, UPG_ANCIENTGREECE_REINCARNATION )
    call SetBuildUpgr( 1, UPG_ANCIENTGREECE_SHEEP_FARMING )
    call SetBuildUpgr( 1, UPG_ANCIENTGREECE_MYTHOLOGY )
    call SetBuildUpgr( 1, UPG_ANCIENTGREECE_URBAN_PLANNING )


    call SetBuildUpgr( 1, UPG_ANCIENTGREECE_RIDE_DOWN )
    call SetBuildUpgr( 1, UPG_ANCIENTGREECE_LIGHTHOUSE )
    call SetBuildUnit( 1, ANCIENTGREECE_LIGHTHOUSE )

    call BuildingStrategyStandardTier3()
    // **********************************
    // *    End Building Strategy       *
    // **********************************
endfunction

function BuildExpansions takes nothing returns nothing
    call SetBuildExpa(expansions, ANCIENTGREECE_TIER_1)
    call SetBuildExpa(expansions, ANCIENTGREECE_BLACKSMITH)
    call SetBuildExpa(expansions, ANCIENTGREECE_WATCH_TOWER)
endfunction

function BuildShips takes nothing returns nothing
    if (buildShips) then
        call SetBuildUnit( 1, ANCIENTGREECE_DOCK )
        call SetBuildUnit( 1, HUMAN_TRANSPORT_SHIP )
        call SetBuildUnit( 2, HUMAN_FRIGATE )
        call SetBuildUnit( 2, HUMAN_BATTLESHIP )
    else
        call SetBuildUnit( 0, ANCIENTGREECE_DOCK )
        call SetBuildUnit( 0, HUMAN_TRANSPORT_SHIP )
        call SetBuildUnit( 0, HUMAN_FRIGATE )
        call SetBuildUnit( 0, HUMAN_BATTLESHIP )
    endif
endfunction

