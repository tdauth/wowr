function BuildExpansions takes nothing returns nothing
    call SetBuildExpa(expansions, BLOOD_ELF_CASTLE)
    call SetBuildExpa(expansions, BLOOD_ELF_LUMBER_MILL)
    call SetBuildExpa(expansions, ELF_GUARD_TOWER)
endfunction

function AttackWaves takes nothing returns nothing
