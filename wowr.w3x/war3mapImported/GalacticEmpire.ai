        call CampaignAttackerEx( 2, 2, 2, GALACTIC_EMPIRE_PLEX_TROOPER )
        
        // big air army
        call CampaignAttackerEx( 10, 12, 14, GALACTIC_EMPIRE_TIE_INTERCEPTOR )
