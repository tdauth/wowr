    call CampaignAttackerEx( 1, 2, 3, GALACTIC_EMPIRE_ASSAULT_TROOPER )
    call CampaignAttackerEx( 1, 2, 3, GALACTIC_EMPIRE_DEWBACK_RIDER )
    call CampaignAttackerEx( 1, 2, 3, GALACTIC_EMPIRE_SITH )
    call CampaignAttackerEx( 2, 2, 3, GALACTIC_EMPIRE_ATST )
    call AddStandardUnitsToAttackWave()
    call Sleep( M2 ) // Waits 2 minutes before attacking
    call LaunchAttack()

    //*** WAVE 7 ***
    call InitAssaultGroup()
    call CampaignAttackerEx( 3, 4, 4, GALACTIC_EMPIRE_STORMTROOPER )
    call CampaignAttackerEx( 1, 2, 3, GALACTIC_EMPIRE_ASSAULT_TROOPER )
    call CampaignAttackerEx( 1, 2, 3, GALACTIC_EMPIRE_DEWBACK_RIDER )
    call CampaignAttackerEx( 1, 2, 3, GALACTIC_EMPIRE_SITH )
    call CampaignAttackerEx( 2, 2, 3, GALACTIC_EMPIRE_ATST )
