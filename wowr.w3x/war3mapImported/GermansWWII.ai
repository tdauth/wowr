    call SetBuildUpgr( 2, UPG_GERMANS_WWII_AUTOBAHN )
    call SetBuildUpgr( 2, UPG_MODERNWARFARE_MACHINE_GUNS )
    call SetBuildUpgr( 2, UPG_MODERNWARFARE_HELMETS )
