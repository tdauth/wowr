function BuildExpansions takes nothing returns nothing
    call SetBuildExpa(expansions, TROLL_TIER_3)
    call SetBuildExpa(expansions, TROLL_WAR_MILL)
    call SetBuildExpa(expansions, TROLL_WATCH_TOWER)
