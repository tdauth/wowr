    loop //Init the infinite attack loop
        //*** WAVE 11 ***
        call InitAssaultGroup()
        
        // small ground army
        call CampaignAttackerEx( 2, 2, 2, TROLL_HEAD_HUNTER )
        call CampaignAttackerEx( 2, 2, 2, TROLL_VOODOO_CANNONEER )
