    call CampaignAttackerEx( 3, 4, 4, VRYKUL_WARRIOR )
    call CampaignAttackerEx( 1, 2, 3, VRYKUL_SPEAR_CARRIER )
    call CampaignAttackerEx( 1, 2, 3, VRYKUL_SPEAR_CARRIER )
    call CampaignAttackerEx( 1, 2, 3, VRYKUL_MAMMOTH_RIDER )
    call CampaignAttackerEx( 1, 2, 3, VRYKUL_VALKYR_GOLDEN )
